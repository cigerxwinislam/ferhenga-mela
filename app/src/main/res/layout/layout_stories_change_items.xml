<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333639">


    <ImageView
        android:id="@+id/image_stories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_default_background" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:id="@+id/forward_dialog">

            <ImageView
                android:id="@+id/stories_profile_emoj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_insert_emotions" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rela_progress"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <com.rovas.forgram.yekazad.Utils.Stories.StoriesProgressView
                android:id="@+id/stories_progress"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/stories_profile_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/stories_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/stories_profile_img"
                android:layout_marginStart="50dp"
                android:layout_alignLeft="@+id/stories_profile_img"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="@string/loading"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stories_profile_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/stories_profile_img"
                android:layout_alignStart="@+id/stories_profile_name"
                android:layout_alignLeft="@+id/stories_profile_name"
                android:text="@string/loading"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </RelativeLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>